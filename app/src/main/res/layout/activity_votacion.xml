<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.ibm.visual_recognition.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.ibm.visual_recognition.MainActivity"
        tools:showIn="@layout/activity_main">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <Button
                        android:id="@+id/buttonV1"
                        android:layout_width="200dp"
                        android:layout_height="196dp"
                        android:background="@drawable/sie" />

                    <Button
                        android:id="@+id/buttonV2"
                        android:layout_width="200dp"
                        android:layout_height="196dp"
                        android:background="@drawable/chefsito" />

                    <Button
                        android:id="@+id/buttonV3"
                        android:layout_width="200dp"
                        android:layout_height="196dp"
                        android:layout_column="0"
                        android:layout_row="1"
                        android:background="@drawable/edetect" />

                    <Button
                        android:id="@+id/buttonV4"
                        android:layout_width="200dp"
                        android:layout_height="196dp"
                        android:layout_column="1"
                        android:layout_row="1"
                        android:background="@drawable/emd" />

                    <Button
                        android:id="@+id/buttonV5"
                        android:layout_width="200dp"
                        android:layout_height="196dp"
                        android:background="@drawable/emin" />

                    <Button
                        android:id="@+id/buttonV6"
                        android:layout_width="200dp"
                        android:layout_height="196dp"
                        android:background="@drawable/quickmed" />

                    <Button
                        android:id="@+id/buttonV7"
                        android:layout_width="200dp"
                        android:layout_height="196dp"
                        android:background="@drawable/twt" />

                </LinearLayout>
            </ScrollView>

        </GridLayout>

    </RelativeLayout>

    <android.support.design.widget.AppBarLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

</android.support.design.widget.CoordinatorLayout>
